{% extends 'admin-user.html.twig' %}

{% block title %}
  Salles ‚óà Esca'Lab
{% endblock %}

{% block body %}
  <div class="d-sm-flex justify-content-start align-items-center mb-4">
    <h3 class="text-dark mb-0 me-2 poppins bold text-black"
      style="color: rgb(33,37,41);">
      Salles
    </h3>
    <a href="{{ path('gym_add') }}">
      <button type="button" class="btn btn-success ms-2">+ Ajouter</button>
    </a>
  </div>
  <div class="row justify-content-around align-items-center">
    {% for gym in gyms %}
      <div class="col col-3">
        <div class="card">
          <div class="card-header">
            <div class="row align-items-center justify-content-between">
              <h5 class="card-title col-5 mb-0">
                {{ gym.name|capitalize }}
              </h5>
              <div class="col-7 text-end">
                <a href="{{
                  path(
                    'gym_edit',
                    {
                      id: gym.id
                    }
                  )
                  }}">
                  <button type="button" class="btn btn-warning">‚úèÔ∏è</button>
                </a>
                <button class="btn btn-danger"
                  data-href="{{
                  path(
                    'gym_remove',
                    {
                      id: gym.id
                    }
                  )
                  }}"
                  data-bs-toggle="modal"
                  data-bs-target="#confirm-delete">
                  üóë
                </button>
              </div>
            </div>
          </div>
          <div class="card-body">
            <div class="row justify-content-start align-items-center mb-2">
              <div class="col-12">
                <h6>
                  Nom : {{ gym.name }}
                </h6>
              </div>
              <div class="col-12">
                <h6>
                  Adresse : {{ gym.address }}, {{ gym.pc }} {{ gym.city }}
                </h6>
              </div>
              <div class="col-12">
                <h6>
                  Taille : {{ gym.size }} m&sup2
                </h6>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <a href="{{
              path(
                'gym_routes_franchise',
                {
                  id: gym.id
                }
              )
              }}">
              <button type="button" class="btn btn-outline-primary">
                Voies
              </button>
            </a>
          </div>
        </div>
      </div>
    {% else %}

    {% endfor %}

    <div class="modal fade" id="confirm-delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Suppression</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            √ätes-vous s√ªr de vouloir supprimer cet|te employ√©|e ?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <a class="btn btn-outline-danger">Supprimer</a>
          </div>
        </div>
      </div>
    </div>
    <script>
      var modal = document.getElementById('confirm-delete');

      modal.addEventListener('show.bs.modal', function (e) {
        var btn = this.getElementsByClassName('btn-outline-danger')[0];
        btn.href = e.relatedTarget.getAttribute('data-href');
        return false;
      });
    </script>
  </div>
{% endblock %}
