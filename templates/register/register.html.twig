{% extends 'base.html.twig' %}

{% block title %}
Inscription ◈ Esca'Lab
{% endblock %}

{% block nav %}
<nav id="mainNav" class="navbar navbar-light navbar-expand-lg fixed-top">
	<div class="container">
		<a class="navbar-brand" href="{{ path('accueil') }}">Esca'Lab</a>
		<button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
			<i class="fa fa-bars"></i>
		</button>
		<div id="navbarResponsive" class="collapse navbar-collapse">
			<ul class="navbar-nav ms-auto">
				<li class="nav-item">
					<a class="nav-link" href="{{ path('accueil') }}">Accueil</a>
				</li>
				{% if app.user.id is defined and app.user.id != 0 %}
					<li class="nav-item" style="display: inline-block">
						<a class="nav-link" href="{{ path('user') }}">Mon compte</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
					</li>
					<li class="nav-item">
						<img class="border rounded-circle img-profile" width="30px" height="30px" style="" src="{{asset('images/profiles/') ~ app.user.picture}}">
					</li>
				{% else %}
					<li class="nav-item">
						<a class="nav-link" href="{{ path }}">Se connecter</a>
					</li>
					<div class="d-none d-sm-block topbar-divider"></div>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('register') }}">S&#39;inscrire</a>
					</li>
				{% endif %}
			</ul>
		</div>
	</div>
</nav>
{% endblock %}

{% block body %}
<main class="gradient-light-grey-light-blue">
<div class="container min-vh-100">
    <div class="row min-vh-100">
        <div class="col-xl-3"></div>
        <div class="col-xl-6 align-self-center">
            <div class="custom-container">
                {{ form_start(form) }}
                    <div class="text-center">
                        <img src="{{ asset('images/logo.png') }}"
                            width="50"
                            height="50"
                            class="rounded"
                            alt="logo" />
                    </div>

                    <h1 class="text-center lobster text-black mb-4">
                        Inscrivez-vous
                    </h1>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                {{ form_row(form.firstname) }}
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3">
                                {{ form_row(form.lastname) }}
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3">
                                {{ form_row(form.birthdate) }}
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                      {{ form_row(form.username) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                {{ form_row(form.password.first) }}
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3">
                                {{ form_row(form.password.second) }}
                            </div>
                        </div>
                        <p class="fst-italic text-danger poppins bold tiny">
                            {{ form_errors(form) }}
                        </p>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary poppins bold mb-3 rounded"
                            type="submit">
                            M'inscrire !
                        </button>

                {{ form_end(form) }}
                        <p class="fst-italic fs-6 text-muted poppins light">
                            Vous avez déjà un compte ? <a class="text-decoration-none"
                                href="{{ path('login') }}">Connectez-vous</a>
                        </p>
                    </div>
            </div>
        </div>
        <div class="col-xl-3"></div>
    </div>
    <div class="row">
		<div class="col-md-10 col-lg-8 mx-auto" style="text-align: center;">
			<ul class="list-inline text-center">
				<li class="list-inline-item">
					<span class="">
						<i class="bi bi-twitter"></i>
					<span>
				</li>
				<li class="list-inline-item">
					<span class="fa-stack fa-lg">
						<i class="bi bi-facebook"></i>
					</span>
				</li>
			</ul>
			<p class="text-muted copyright">Copyright © Esca'Lab 2022</p>
		</div>
	</div>
</div>
</main>
{% endblock %}

{% block footer %}
{% endblock %}