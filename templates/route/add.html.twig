{% extends is_granted('ROLE_ADMIN_SALLE') ? 'admin-user.html.twig' : 'user.html.twig' %}

{% block title %}Nouvelle voie â—ˆ Esca'Lab
{% endblock %}

{% block body %}
<div class="container-fluid">
	<h3 class="text-dark mb-4 bold poppins">Voies</h3>
	<div class="card shadow">
		<div class="card-header py-3">
			<p class="text-primary m-0 fw-bold poppins">Ajouter d'une voie</p>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-md-12">
					{{ form_start(form) }}
					<div class="row">
						<div class="col">
							<div class="mb-6">
								{{ form_row(form.name) }}
							</div>
						</div>
						<div class="col">
							<div class="mb-6">
								{{ form_row(form.difficulty) }}
							</div>
						</div>
					</div>
					<br>
					{{ form_row(form.picture) }}

					<br>
					<button type="submit" class="btn btn-primary btn-block">Ajouter la voie</button>

					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
	<br><br>


    <script src="{{asset('bootstrap/js/bootstrap.min.js')}}"></script>
    <script src="{{asset('js/chart.min.js')}}"></script>
    <script src="{{asset('js/bs-init.js')}}"></script>
    <script src="{{asset('js/theme.js')}}"></script>

{% endblock %}