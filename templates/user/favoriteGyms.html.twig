{% extends 'user.html.twig' %}

{% block title %}
	Franchises â—ˆ Esca'Lab
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/jquery.min.js') }}"></script>
	<script src="{{ asset('js/user/friends.js') }}"></script>
	<script src="{{ asset('js/user/add-to-favorites.js') }}"></script>
	<script src="{{ asset('js/tiny-toast-1.1.0/tiny-toast.min.js') }}"></script>
{% endblock %}

{% block body %}
	<style>
		.btn-update-favorite {
			color: goldenrod;
			font-size: 20px;
			cursor: pointer;
			visibility: hidden;
		}
		.col:hover .btn-update-favorite {
			visibility: visible;
		}
	</style>
	<div class="container-fluid">
		<div class="row">
			{% for gym in gyms %}
				<div id="carte-user-{{ gym.gymId.id }}" class="col-md-6 col-xl-3 mb-4">
					<div class="card shadow border-start-warning py-2">
						<div class="card-body">
							<div class="row align-items-center no-gutters">
								<div class="col text-center">
									<i id="btn-gym-{{ gym.gymId.id }}" class="float-end me-3 btn-update-favorite removeFromFavorites bi bi-star-fill" data-b-route="{{ gym.gymId.id }}"></i>
									<a href="{{ path('gym', {id: gym.id}) }}">
										<img src="{{ asset('images/gyms/') ~ gym.gymId.picture }}" style="object-fit: cover !important" class="img-tn rounded img-fluid"/>
									</a>
								</div>
							</div>
							<hr class="bg-danger border-2 border-top border-secondary">
							<div class="row">
								<div class="col" style="text-align: center;">
									<a href="{{ path('gym', {id: gym.gymId.id}) }}" style="text-decoration: none;color: black;">
										<h3>
											<strong>{{ gym.gymId.name }}</strong>
										</h3>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<input type="text" id="url_root" value="{{ app.request.getSchemeAndHttpHost() }}" hidden></input>{% endblock %}
